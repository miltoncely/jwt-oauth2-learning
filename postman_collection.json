		{
			"name": "Auth Service",
			"item": [
				{
					"name": "Get Token (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"access_token\", jsonData.access_token);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/oauth/token?grant_type=password&username=admin&password=123456",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8080",
							"path": ["oauth", "token"],
							"query": [
								{"key": "grant_type", "value": "password"},
								{"key": "username", "value": "admin"},
								{"key": "password", "value": "123456"}
							]
						}
					},
					"response": []
				},
